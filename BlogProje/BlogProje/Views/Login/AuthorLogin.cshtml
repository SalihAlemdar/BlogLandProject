<body>
    <!-- form section start -->
    <section class="w3l-hotair-form">
        
        <h1>Yazar Giriş Paneli</h1>

        <div class="container">
            <!-- /form -->
            <div class="workinghny-form-grid">
                <div class="main-hotair">
                    <div class="content-wthree">

                        <h2>Login</h2>

                        @using (Html.BeginForm("AuthorLogin", "Login", FormMethod.Post))
                        {
                            <input type="text" class="text" name="Mail" placeholder="Mail Adresi" required="" autofocus>
                            <input type="password" class="password" name="Password" placeholder="Şifre" required="" autofocus>
                            <button class="btn" type="submit">Giriş Yap</button>
                        }

                    <p class="account">Şifremi Unuttum ? &nbsp; <a href="#signup">Şifre Gönder</a></p>
                        <p class="account">Blog Yazarı Ol &nbsp;  <a href="/Author/AddBlogAuthor/">Kayıt Ol</a></p>
                        <p class="account">Admin Girişi &nbsp; <a href="/Login/AdminLogin/">Giriş Yap</a></p>
                        <p class="account">Anasayfaya Dön &nbsp; <a href="/Blog/Index/">Anasayfa</a></p>
                    </div>
                    <div class="w3l_form align-self">
                        <div class="left_grid_info">
                            <img src="~/Report-Login-Free/images/1.png" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
            <!-- //form -->
        </div>
        <!-- copyright-->
        <div class="copyright text-center">
            <p class="copy-footer-29">
                Copyright © 2022 Tüm hakları saklıdır | Design by <a href="">Salih Alemdar</a>
            </p>
        </div>
