@model IEnumerable<EntityLayer.Conrete.About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layoutt.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/miniblog/miniblog/images/img_4.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">HAKKIMIZDA</h1>
                    <p class="lead mb-4 text-white">Sizler için blog yazan yazarlarımızı ve ekibimizi daha yakından tanımak ister misiniz ?</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 order-md-2">
                <img src="/miniblog/miniblog/images/img_1.jpg" alt="Image" class="img-fluid">
            </div>
            <div class="col-md-5 mr-auto order-md-1">
                <h2>BlogLand Kimdir ?</h2>
                @foreach (var item in Model)
                {
                    <p>@item.AboutContent1</p>
                }
                <ul class="ul-check list-unstyled success">
                    <li>Onlarca kategori.</li>
                    <li>Her gün en güncel yeni bloglar.</li>
                    <li>Birbirinden değerli yazarlar.</li>
                    <li>Günlük 1000+ okuyucu.</li>
                    <li>Global çapta farklı ülkelerden takipçiler.</li>
                    <li>Sosyal medyada 500K+ takipçi.</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@Html.Action("MeetTheTeam", "About")

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="/miniblog/miniblog/images/img_1.jpg" alt="Image" class="img-fluid">
            </div>
            <div class="col-md-5 ml-auto">
                <h2>Neler Yapıyoruz !</h2>
                @foreach (var item in Model)
                {
                <p class="mb-4">@item.AboutContent2</p>
                }
                <ul class="ul-check list-unstyled success">
                    <li>İçerik Yorumları</li>
                    <li>İçerikler hakkında yazılar</li>
                    <li>Bilgi paylaşımı ve yeni yazarlar keşfetme</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--Subsicript partial-->
@Html.Action("AddMail", "MailSubscribe")

<!--Burası Footer partial'i-->
@Html.Action("Footer", "About")